{
  "name": "finalcore",
  "version": "1.0.0",
  "main": "server.js",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "start": "node server.js",
    "build": "webpack --config webpack.config.js",
    "htmlhint": "htmlhint src/*.html test/*.html",
    "eslint": "eslint --ext .js src/ test/",
    "pretest": "npm run eslint && npm run htmlhint",
    "test-browser": "opener ./test/index.html",
    "test-node": "nyc mocha ./test/headless.js",
    "test": "npm run test-node && npm run test-browser"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "axios": "^1.7.3",
    "chai": "^4.1.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.8.0",
    "express": "^4.19.2",
    "firebase": "^10.12.5",
    "htmlhint": "^1.1.4",
    "mocha": "^10.7.0",
    "nyc": "^17.0.0",
    "opener": "^1.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "babel-loader": "^8.2.2",
    "css-loader": "^7.1.2",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.2"
  }
}
